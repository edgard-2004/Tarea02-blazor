@page "/"

<PageTitle>Tarea 2</PageTitle>


<body>
    <h1>Ejercicios Correspondientes</h1>
    <div class="menu">
        @for (int i = 2; i <= 50; i += 2)
        {
            <a href="@($"Ejercicio{i}")" class="exercise-button">
                <i class="@GetIcon(i)"></i> Ejercicio @i
            </a>
        }
    </div>
</body>

@code {
    private string GetIcon(int ejercicio)
    {
        switch (ejercicio)
        {
            case 2:
                return "fas fa-sort-numeric-up";
                
            case 4:
                return "fas fa-percent";
            case 6:
                return "fas fa-code";
            case 8:
                return "fas fa-calculator";
            case 10:
                return "fas fa-hashtag";
            case 12:
                return "fas fa-divide";
            case 14:
                return "fas fa-infinity";
            case 16:
                return "fas fa-project-diagram";
            case 18:
                return "fas fa-cogs";
            case 20:
                return "fas fa-bolt";
            case 22:
                return "fas fa-chart-bar";
            case 24:
                return "fas fa-dice";
            case 26:
                return "fas fa-puzzle-piece";
            case 28:
                return "fas fa-brain";
            case 30:
                return "fas fa-robot";
            case 32:
                return "fas fa-key";
            case 34:
                return "fas fa-sync-alt";
            case 36:
                return "fas fa-ruler";
            case 38:
                return "fas fa-sitemap";
            case 40:
                return "fas fa-database";
            case 42:
                return "fas fa-lock";
            case 44:
                return "fas fa-search";
            case 46:
                return "fas fa-layer-group";
            case 48:
                return "fas fa-network-wired";
            case 50:
                return "fas fa-flag-checkered";
            default:
                return "fas fa-question-circle";
        }
    }
}
